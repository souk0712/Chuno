<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom font 적용 -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="customRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <!--  풀스크린 모드  -->
    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/main_font</item>

    </style>

    <style name="CustomPicker">
        <item name="android:textColorPrimary">@color/primary</item>     <!-- text color -->
        <item name="colorControlNormal">@color/primary</item>   <!-- divider color -->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="MyToolbarStyle">
<!--        <item name="android:background">@drawable/btn_square</item>-->
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:color">@color/primary</item>
        <item name="android:colorActivatedHighlight">@color/primary</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textColorSecondary">@color/primary</item>
    </style>
</resources>